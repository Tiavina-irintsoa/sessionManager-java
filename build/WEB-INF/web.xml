<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">
    <servlet>
        <servlet-name>SessionStartServlet</servlet-name>
        <servlet-class>servlet.SessionStartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionStartServlet</servlet-name>
        <url-pattern>/sessionStart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddSessionServlet</servlet-name>
        <servlet-class>servlet.AddSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSessionServlet</servlet-name>
        <url-pattern>/addSession</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateSessionServlet</servlet-name>
        <servlet-class>servlet.UpdateSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateSessionServlet</servlet-name>
        <url-pattern>/updateSession</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveSessionServlet</servlet-name>
        <servlet-class>servlet.RemoveSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveSessionServlet</servlet-name>
        <url-pattern>/removeSession</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InvalidateSessionServlet</servlet-name>
        <servlet-class>servlet.InvalidateSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InvalidateSessionServlet</servlet-name>
        <url-pattern>/invalidate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetSessionServlet</servlet-name>
        <servlet-class>servlet.GetSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSessionServlet</servlet-name>
        <url-pattern>/afficher</url-pattern>
    </servlet-mapping>
</web-app>
